<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:layout_marginTop="30dp"
    android:id="@+id/mainlay">

    <ImageView
        android:id="@+id/bPic"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:minWidth="200dp"
        android:maxWidth="200dp"
        android:minHeight="300dp"
        android:maxHeight="300dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:background="#000000"
        />

    <TextView
        android:id="@+id/bPer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bPer"
        app:layout_constraintLeft_toLeftOf="@id/bPic"
        app:layout_constraintRight_toRightOf="@id/bPic"
        app:layout_constraintBottom_toBottomOf="@id/bPic"
        android:layout_marginBottom="20dp"
        android:minWidth="50dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
    />

    <TextView
        android:id="@+id/thresholdBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:text="Threshold:"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bPic"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:textColor="#000000"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/threshold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bPic"
        app:layout_constraintTop_toBottomOf="@id/thresholdBox"
        android:maxLength="2"
        android:inputType="number"
        android:cursorVisible="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Threshold"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:imeOptions="actionDone"
        />

