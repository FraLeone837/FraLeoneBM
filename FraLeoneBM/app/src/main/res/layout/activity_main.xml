    <Switch
        android:id="@+id/saveMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:text="Save mode"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bPic"
        app:layout_constraintTop_toBottomOf="@id/threshold"
        android:layout_marginTop="70dp"
        android:onClick="saveMode"
        android:textSize="16dp"
        />

    <Button
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bPic"
        app:layout_constraintTop_toBottomOf="@id/saveMode"
        android:layout_marginTop="10dp"
        android:onClick="showInfo"
        android:textSize="16dp"
        />


    <TextView
        android:id="@+id/bStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:minWidth="170dp"
        android:text="Status"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bTemp"
        app:layout_constraintTop_toBottomOf="@id/bPic" />

    <TextView
        android:id="@+id/bTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="170dp"
        android:text="Temperature"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/bStatus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bPic"
        android:layout_marginTop="40dp"
        android:textColor="#000000"
        android:textSize="16dp"
        />

