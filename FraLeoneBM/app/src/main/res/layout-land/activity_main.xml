    <TextView
        android:id="@+id/thresholdBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="100dp"
        android:minHeight="28dp"
        android:text="Threshold:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@id/bPic"
        app:layout_constraintRight_toLeftOf="@id/saveMode"
        app:layout_constraintBottom_toTopOf="@id/bStatus"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/threshold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:hint="Threshold"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:lines="1"
        android:maxLength="2"
        android:maxLines="1"
        android:minWidth="100dp"
        android:minHeight="50dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toRightOf="@id/bPic"
        app:layout_constraintRight_toLeftOf="@id/info"
        app:layout_constraintTop_toBottomOf="@id/thresholdBox" />

    <Switch
        android:id="@+id/saveMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="130dp"
        android:minHeight="28dp"
        android:onClick="saveMode"
        android:text="Save mode"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/thresholdBox"

        app:layout_constraintBottom_toTopOf="@id/bTemp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="90dp" />

    <Button
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="130dp"
        android:minHeight="50dp"
        android:gravity="center"
        android:onClick="showInfo"
        android:text="Info"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toRightOf="@id/threshold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/saveMode" />

    <TextView
        android:id="@+id/bStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="100dp"
        android:text="Status"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toRightOf="@+id/bPic"
        app:layout_constraintRight_toLeftOf="@id/bTemp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thresholdBox" />

    <TextView
        android:id="@+id/bTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="130dp"
        android:text="Temperature"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toRightOf="@id/bStatus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/saveMode" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

